rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isValidImageFile() {
      return request.resource.size < 5 * 1024 * 1024 // 5MB
             && request.resource.contentType.matches('image/(jpeg|jpg|png|webp)');
    }
    
    // Product images
    match /products/{shopId}/{productId}/{imageFile} {
      // Anyone can read product images
      allow read: if true;
      
      // Only authenticated users can upload images
      // (Server-side code will verify shop ownership)
      allow write: if isAuthenticated() && isValidImageFile();
      
      // Allow deletion (Server-side code will verify ownership)
      allow delete: if isAuthenticated();
    }
    
    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
